<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:fontFamily">@font/hiraginosans3</item>
    </style>
    <style name="Theme.Bs_test" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextAppearanceBase">
        <item name="android:textColor">@color/grey5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">font/poppins_medium</item>
    </style>
    <style name="TextAppearanceBase.Subhead" parent="@style/TextAppearanceBase">
        <item name="android:textSize">15.0sp</item>
    </style>

    <style name="TextAppearanceBase.Subhead.Small" parent="@style/TextAppearanceBase">
        <item name="android:textSize">12.0sp</item>
    </style>

    <style name="TextAppearanceBase.Title1" parent="@style/TextAppearanceBase">
        <item name="android:textSize">28.0sp</item>
        <item name="fontFamily">font/poppins_medium</item>
    </style>

    <style name="TextAppearanceBase.Title1.Medium" parent="@style/TextAppearanceBase.Title1">
        <item name="fontFamily">font/poppins_medium</item>
    </style>

    <style name="TextAppearanceBase.Title2" parent="@style/TextAppearanceBase">
        <item name="android:textSize">22.0sp</item>
    </style>

    <style name="TextAppearanceBase.Title3" parent="@style/TextAppearanceBase">
        <item name="android:textSize">20.0sp</item>
    </style>

    <style name="TextAppearanceBase.Title4" parent="@style/TextAppearanceBase">
        <item name="android:textSize">18.0sp</item>
    </style>

    <style name="TextAppearanceBase.Title5" parent="@style/TextAppearanceBase">
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="TextAppearanceBase.Title6" parent="@style/TextAppearanceBase">
        <item name="android:textSize">14.0sp</item>
    </style>

    <style name="TextAppearanceBase.SmallTitle" parent="@style/TextAppearanceBase">
        <item name="android:textSize">@dimen/text_size_xxtiny</item>
        <item name="android:textAllCaps">true</item>
        <!--   <item name="fontPath">"fonts/typeface_700.otf"</item>-->
    </style>

    <style name="TextAppearanceBase.SmallTitle_10" parent="@style/TextAppearanceBase">
        <item name="android:textSize">@dimen/text_size_xtiny</item>
        <item name="android:textAllCaps">false</item>
        <!--   <item name="fontPath">"fonts/typeface_700.otf"</item>-->
    </style>


    <style name="TextBody18Bold" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="fontFamily">@font/hiraginosans6</item>
    </style>

    <style name="TextBody12" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/hiraginosans3</item>
    </style>

    <style name="TextBody13Medium" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontFamily">@font/hiraginosans4</item>
    </style>
    <style name="TextBody11Bold" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/hiraginosans6</item>
    </style>

    <style name="TextBody11Button" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/hiraginosans6</item>
        <item name="rippleColor">@color/btn_text_btn_ripple_white_color</item>

    </style>

    <style name="TextBody12Bold" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/hiraginosans6</item>
    </style>
    <style name="TextBody12BarlowSemiBold" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/barlowsemibold</item>
    </style>


    <style name="BeatsButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">textStart</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="ButtonStyleEnable" parent="BeatsButtonStyle">
        <item name="backgroundTint">@color/button_bgcolor_pink</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
    <style name="ButtonStyleEnable13" parent="BeatsButtonStyle">
        <item name="backgroundTint">@color/button_bgcolor_pink</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>
    <style name="ButtonStyleEnableSmall" parent="BeatsButtonStyle">
        <item name="backgroundTint">@color/button_bgcolor_pink</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="CommonButtonStyleEnable" parent="BeatsButtonStyle">
        <item name="backgroundTint">@color/button_commons_color</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>

    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="superBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>

        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="beatsBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/_600sdp</item>

    </style>


</resources>