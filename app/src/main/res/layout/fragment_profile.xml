<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.ProfileFragment"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/screen_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_back" />

                    <TextView
                        android:id="@+id/toolbar_title"
                        style="@style/TextBody13Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_toRightOf="@+id/back"
                        android:text="profile"
                        android:textColor="@color/text_color"
                        android:letterSpacing="0.12"
                        android:textStyle="normal" />

                </RelativeLayout>

            </RelativeLayout>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/sc_main"
                android:layout_width="match_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:orientation="vertical">
                   <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="@dimen/_38sdp"
                        android:layout_marginBottom="@dimen/_38sdp"
                        android:layout_gravity="center">

                       <de.hdodenhof.circleimageview.CircleImageView
                           android:id="@+id/profile_image"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/circle_solid_white"
                           android:src="@drawable/ic_profile"
                           app:civ_border_width="0dp" />


                    </RelativeLayout>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingStart="@dimen/_16sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:gravity="left"
                            android:paddingTop="6dp"
                            android:paddingEnd="2dp"
                            android:text="full name"
                            android:textColor="@color/color_grey1"
                            android:textSize="@dimen/text_size_medium_14" />

                            <TextView
                                android:id="@+id/tv_profile_full_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="@dimen/_50sdp"
                                android:layout_marginBottom="2dp"
                                android:gravity="left"
                                android:paddingEnd="2dp"
                                android:paddingBottom="10dp"
                                android:text="Hozrot Belal"
                                android:textColor="@color/txt_black_10"
                                android:textSize="@dimen/text_size_medium_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".8dp"
                            android:background="@color/color_view"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_17sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:gravity="left"
                            android:paddingTop="6dp"
                            android:paddingEnd="2dp"
                            android:text="phone"
                            android:textColor="@color/color_grey1"
                            android:textSize="@dimen/text_size_medium_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".8dp"
                            android:background="@color/color_view"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_17sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:gravity="left"
                            android:paddingTop="6dp"
                            android:paddingEnd="2dp"
                            android:text="email"
                            android:textColor="@color/color_grey1"
                            android:textSize="@dimen/text_size_medium_14" />



                            <TextView
                                android:id="@+id/tv_profile_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_50sdp"
                                android:layout_marginBottom="2dp"
                                android:gravity="left"
                                android:paddingEnd="2dp"
                                android:paddingBottom="10dp"
                                android:hint=""
                                android:textColorHint="@color/color_grey"
                                android:textColor="@color/txt_black_10"
                                android:textSize="@dimen/text_size_medium_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".8dp"
                            android:background="@color/color_view"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_17sdp"/>

                               </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="90dip"/>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>